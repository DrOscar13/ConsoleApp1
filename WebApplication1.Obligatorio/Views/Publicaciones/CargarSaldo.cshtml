@{
    ViewData["Title"] = "Cargar Saldo";
}

<h2>Cargar Saldo</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        <p>@ViewBag.Message</p>
    </div>
}

<form asp-action="CargarSaldo" method="post">
    <div class="form-group">
        <label for="monto">Monto a cargar:</label>
        <input type="number" class="form-control" id="monto" name="monto" step="0.01" min="0.01" required />
    </div>
    <button type="submit" class="btn btn-primary">Cargar Saldo</button>
</form>
